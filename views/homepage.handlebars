<body>
    <main>

    {{#if posts}}
        {{#each}}
    <article class="post-container">
        <div class="post">
            <div class="post-title">
                <h2>{{title}}</h2>
            </div>
            <div class="post-body">
                <p>{{post_text}}</p>
            </div>
            <div class="post-author">
                <h3>Author: {{username}}</h3>
            </div>
            <form action="/post" method="GET">
                <button type="submit">View all comments</button>
            </form>
        </div>
    </article>
    {{/each}}
    {{else}}
    <h2>No posts yet!</h2>
    {{/if}}

    </main>
    
</body>