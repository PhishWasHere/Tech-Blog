<body>

    <section class="post-container">

        <article class="post-container">
            <div class="post">
                <div class="post-title">
                    <h2>{{user.title}}</h2>
                </div>
                <div class="post-body">
                    <p>{{user.post_text}}</p>
                </div>
                <div class="post-author">
                    <h3>Author: {{user.username}}</h3>
                </div>
            </div>
        </article>
        {{#each comment}}
            <section>
                <div>
                   <h3> {{comment_text}} </h3>
                </div>
                <div>
                    <h4> {{username}} </h4>
                </div>
            </section>
        {{/each}}
    </section>

</body>